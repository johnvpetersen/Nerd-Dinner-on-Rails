<h2>Log On</h2>
<p>Please enter your username and password. <a href="/users/new">Register</a> if you don't have an account.</p>
<% form_tag session_path do -%>
<div>
<fieldset>
<legend>Account Information</legend>

<p><%= label_tag 'Username:' %>
<%= text_field_tag 'login', @login %></p>

<p><%= label_tag 'Password:' %>
<%= password_field_tag 'password', nil %></p>


<%= label_tag 'remember_me', 'Remember me?' %>
<%= check_box_tag 'remember_me', '1', @remember_me %>


<p><%= submit_tag 'Log in' %></p>
</fieldset>
</div>
<% end -%>
